{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strict": true,
        "allowJs": true,
        "jsx": "react-native",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "baseUrl": ".", 
        "paths": {
        "~/*": [  
            "src/*"
        ]
        }
    },
    "exclude": [
        "node_modules",
        "__tests__",
        "**/*.config.js"
    ]
}
